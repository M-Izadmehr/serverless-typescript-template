{
  "tabWidth": 4,
  "printWidth": 100,
  "semi": false,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "parser": "typescript",
  "singleQuote": true,
  "overrides": [
    {
      "files": "*.json",
      "options": {
        "parser": "json",
        "tabWidth": 2
      }
    },
    {
      "files": ".prettierrc",
      "options": {
        "parser": "json",
        "tabWidth": 2
      }
    },
    {
      "files": ["*.yml"],
      "options": {
        "parser": "yaml",
        "singleQuote": true,
        "tabWidth": 2
      }
    },
    {
      "files": ["*.html"],
      "options": {
        "parser": "html",
        "singleQuote": true,
        "tabWidth": 2
      }
    }
  ]
}
